set nocp

call pathogen#infect()
syntax on
filetype plugin indent on

" 设置行号显示
set nu

" 设置tab长度为4
set tabstop=4
set shiftwidth=4
set expandtab

set cursorline

set encoding=utf-8
set fileencodings=uft-8     "使用utf-8或gbk打开文件
set fileformats=unix

set hls                     "检索时高亮显示匹配项

set foldmethod=syntax       "代码折叠
  
